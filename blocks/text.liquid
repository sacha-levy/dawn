{% style %}
  .block__text-{{ block.id }} {
    color: {{ block.settings.color }};
    background-color: {{ block.settings.color_background }};
    border-style: {{ block.settings.border_style }};
    border-color: {{ block.settings.border_color }};
    border-width: {{ block.settings.border_width }}px;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .block__text-{{ block.id }} p {
    margin: 0;
  }
{% endstyle %}

<{{ block.settings.tag }}
  {% if block.settings.tag == 'a' %}
    href="{{ block.settings.link }}"
    {% if block.settings.open_on_new_tab %}
      target="_blank"
    {% endif %}
  {% endif %}
  class="
    block__text-{{ block.id }}
    {{ block.settings.font_size }}
    {{ block.settings.spacing | class_list }}
    {{ block.settings.size | class_list }}
    {{ block.settings.font_family }}
    {{ block.settings.text_alignment }}
  "
>
  {{ block.settings.text }}
</{{ block.settings.tag }}>

{% schema %}
{
  "name": "Text",
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "Content",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "font_size",
      "label": "Font Size",
      "options": [
        { "value": "hxxl", "label": "XX-Large" },
        { "value": "hxl", "label": "X-Large" },
        { "value": "h0", "label": "Large" },
        { "value": "h1", "label": "Medium" },
        { "value": "h2", "label": "Small" },
        { "value": "h3", "label": "X-Small" },
        { "value": "h4", "label": "XX-Small" },
        { "value": "h5", "label": "XXX-Small" }
      ],
      "default": "h1"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "font_family",
      "label": "Font Family",
      "options": [
        { "value": "heading_primary", "label": "Heading Primary" },
        { "value": "heading_secondary", "label": "Heading Secondary" },
        { "value": "body_primary", "label": "Body Primary" },
        { "value": "body_secondary", "label": "Body Secondary" }
      ],
      "default": "body_primary"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Color"
    },
    {
      "type": "color",
      "id": "color_background",
      "label": "Background Color"
    },
    {
      "type": "header",
      "content": "Border"
    },
    {
      "type": "select",
      "id": "border_style",
      "label": "Border Style",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "solid", "label": "Solid" },
        { "value": "dashed", "label": "Dashed" }
      ],
      "default": "none"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color"
    },
    {
      "type": "range",
      "id": "border_width",
      "label": "Border Width",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border Radius",
      "min": 0,
      "max": 100,
      "step": 1,
      "default": 0,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "checkbox",
      "id": "open_on_new_tab",
      "label": "Open on new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "SEO"
    },
    {
      "type": "select",
      "id": "tag",
      "label": "Tag Selector",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "div", "label": "DIV" },
        { "value": "a", "label": "A" }
      ],
      "default": "div"
    },
    {
      "type": "style.spacing_panel",
      "id": "spacing",
      "label": "Spacing",
      "default": {
        "padding": "0px"
      }
    },
    {
      "type": "style.size_panel",
      "id": "size",
      "label": "Size"
    }
  ],
  "presets": [
    {
      "name": "Text"
    }
  ]
}
{% endschema %}
