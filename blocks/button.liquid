{% style %}
  .block__button {
    display: inline-block;
    color: {{ block.settings.color }};
    background-color: {{ block.settings.color_background }};
    text-decoration: none;
    border-style: {{ block.settings.border_style }};
    border-color: {{ block.settings.border_color }};
    border-width: {{ block.settings.border_width }}px;
    border-radius: {{ block.settings.border_radius }}px;
  }
{% endstyle %}

<a
  href="{{ block.settings.link }}"
  {% if block.settings.open_on_new_tab %}
    target="_blank"
  {% endif %}
  class="
    block__button
    {{ block.settings.size }}
    {{ block.settings.spacing | class_list }}
    {{ block.settings.font_family }}
  "
>
  {{ block.settings.label }}
</a>

{% schema %}
{
  "name": "Button",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "Button label"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "checkbox",
      "id": "open_on_new_tab",
      "label": "Open on new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "size",
      "label": "Size",
      "options": [
        { "value": "extra_large", "label": "Extra Large" },
        { "value": "large", "label": "Large" },
        { "value": "medium", "label": "Medium" },
        { "value": "small", "label": "Small" }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "font_family",
      "label": "Font Family",
      "options": [
        { "value": "heading_primary", "label": "Heading Primary" },
        { "value": "heading_secondary", "label": "Heading Secondary" },
        { "value": "body_primary", "label": "Body Primary" },
        { "value": "body_secondary", "label": "Body Secondary" }
      ],
      "default": "body_primary"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Color",
      "default": "#FFF"
    },
    {
      "type": "color",
      "id": "color_background",
      "label": "Background Color",
      "default": "#000"
    },
    {
      "type": "header",
      "content": "Border"
    },
    {
      "type": "select",
      "id": "border_style",
      "label": "Border Style",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "solid", "label": "Solid" },
        { "value": "dashed", "label": "Dashed" }
      ],
      "default": "none"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color"
    },
    {
      "type": "range",
      "id": "border_width",
      "label": "Border Width",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 0
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border Radius",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 0
    },
    {
      "type": "style.spacing_panel",
      "id": "spacing",
      "label": "Spacing",
      "default": {
        "padding": "10px 35px"
      }
    }
  ],
  "presets": [
    {
      "name": "Button"
    }
  ]
}
{% endschema %}
