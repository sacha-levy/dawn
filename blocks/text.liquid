{% style %}
  .block__text {
    color: {{ block.settings.color }};
    background-color: {{ block.settings.color_background }};
  }

  .block__text p {
    margin: 0;
  }
{% endstyle %}

<{{ block.settings.tag }}
  {% if block.settings.tag == 'a' %}
    href="{{ block.settings.link }}"
    {% if block.settings.open_on_new_tab %}
      target="_blank"
    {% endif %}
  {% endif %}
  class="
    block__text
    {{ block.settings.size }}
    {{ block.settings.spacing | class_list }}
    {{ block.settings.font_family }}
  "
>
  {{ block.settings.text }}
</{{ block.settings.tag }}>

{% schema %}
{
  "name": "Text",
  "settings": [
    {
      "type": "richtext",
      "id": "text",
      "label": "Content",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "size",
      "label": "Size",
      "options": [
        { "value": "hxxl", "label": "Extra Large" },
        { "value": "hxl", "label": "Large" },
        { "value": "h0", "label": "Medium" },
        { "value": "h1", "label": "Small" },
        { "value": "h2", "label": "Extra Small" }
      ],
      "default": "h0"
    },
    {
      "type": "select",
      "id": "font_family",
      "label": "Font Family",
      "options": [
        { "value": "heading_primary", "label": "Heading Primary" },
        { "value": "heading_secondary", "label": "Heading Secondary" },
        { "value": "body_primary", "label": "Body Primary" },
        { "value": "body_secondary", "label": "Body Secondary" }
      ],
      "default": "body_primary"
    },
    {
      "type": "color",
      "id": "color",
      "label": "Color"
    },
    {
      "type": "color",
      "id": "color_background",
      "label": "Background Color"
    },
    {
      "type": "header",
      "content": "Link"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "checkbox",
      "id": "open_on_new_tab",
      "label": "Open on new tab",
      "default": false
    },
    {
      "type": "header",
      "content": "SEO"
    },
    {
      "type": "select",
      "id": "tag",
      "label": "Tag Selector",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "div", "label": "DIV" },
        { "value": "a", "label": "A" }
      ],
      "default": "div"
    },
    {
      "type": "style.spacing_panel",
      "id": "spacing",
      "label": "Spacing",
      "default": {
        "padding": "0px"
      }
    }
  ],
  "presets": [
    {
      "name": "Text"
    }
  ]
}
{% endschema %}
